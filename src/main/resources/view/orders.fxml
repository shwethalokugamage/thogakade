<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="613.0" prefWidth="911.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.orderManagement.OrderManagementFormController">

    <children>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>

            <HBox spacing="10.0" style="-fx-alignment: CENTER_LEFT;">
                <Label text="Order Management">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Search" />
                <TextField fx:id="txtSearchOrder" promptText="Order ID" prefWidth="220.0" />
            </HBox>

            <Separator />

            <HBox spacing="16.0" VBox.vgrow="ALWAYS">
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Orders">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TableView fx:id="tblOrders" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colOrderId" prefWidth="130.0" text="Order ID" />
                            <TableColumn fx:id="colOrderDate" prefWidth="130.0" text="Date" />
                            <TableColumn fx:id="colOrderCustomer" prefWidth="220.0" text="Customer" />
                            <TableColumn fx:id="colOrderTotal" prefWidth="130.0" text="Total" />
                        </columns>
                    </TableView>
                </VBox>

                <VBox prefWidth="330.0" spacing="14.0">
                    <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e6e6e6;">
                        <padding>
                            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                        </padding>

                        <Label text="Quick Actions">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Separator />

                        <Label text="Select an order from the table to see details." wrapText="true" />

                        <Button fx:id="btnViewDetails" maxWidth="1.7976931348623157E308" onAction="#btnViewDetailsOnAction" text="View Order Details" />
                        <Button fx:id="btnRefresh" maxWidth="1.7976931348623157E308" onAction="#btnRefreshOnAction" text="Refresh" />
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
