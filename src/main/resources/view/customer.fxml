<AnchorPane prefHeight="613.0" prefWidth="911.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.customer.CustomerFormController">

    <children>
        <VBox spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>

            <!-- Header -->
            <HBox spacing="10.0" style="-fx-alignment: CENTER_LEFT;">
                <Label text="Customer Management">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Search" />
                <TextField fx:id="txtSearch" promptText="by ID / name" prefWidth="220.0" />
            </HBox>

            <Separator />

            <!-- Body -->
            <HBox spacing="16.0" VBox.vgrow="ALWAYS">

                <!-- LEFT: table -->
                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <Label text="Customers">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>

                    <TableView fx:id="tblCustomer" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colCustomerId" prefWidth="120.0" text="Customer ID" />
                            <TableColumn fx:id="colCustomerName" prefWidth="220.0" text="Name" />
                            <TableColumn fx:id="colCustomerAddress" prefWidth="240.0" text="Address" />
                            <TableColumn fx:id="colCustomerSalary" prefWidth="120.0" text="Salary" />
                        </columns>
                    </TableView>
                </VBox>

                <!-- RIGHT: form -->
                <VBox prefWidth="330.0" spacing="14.0">
                    <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #e6e6e6;">
                        <padding>
                            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                        </padding>

                        <Label text="Customer Details">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Separator />

                        <VBox spacing="6.0">
                            <Label text="Customer ID" />
                            <TextField fx:id="txtCustomerId" promptText="C-001" />
                        </VBox>

                        <VBox spacing="6.0">
                            <Label text="Name" />
                            <TextField fx:id="txtCustomerName" promptText="John" />
                        </VBox>

                        <VBox spacing="6.0">
                            <Label text="Address" />
                            <TextField fx:id="txtCustomerAddress" promptText="No. 12, Main St" />
                        </VBox>

                        <VBox spacing="6.0">
                            <Label text="Salary" />
                            <TextField fx:id="txtCustomerSalary" promptText="0.00" />
                        </VBox>

                        <HBox spacing="10.0">
                            <Button fx:id="btnAdd" maxWidth="1.7976931348623157E308" onAction="#btnAddOnAction" text="Add" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnUpdate" maxWidth="1.7976931348623157E308" onAction="#btnUpdateOnAction" text="Update" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox spacing="10.0">
                            <Button fx:id="btnDelete" maxWidth="1.7976931348623157E308" onAction="#btnDeleteOnAction" text="Delete" HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnClear" maxWidth="1.7976931348623157E308" onAction="#btnClearOnAction" text="Clear" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
